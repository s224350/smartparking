void transferPictureToSARA() {
  send("AT+UDWNFILE=\"picture\",155");
  delay(200);
  MySerial.flush();
  MySerial.write(testPicture,155);
  MySerial.flush();
}

void send(String message) {
  MySerial.print(message+"\r");
  delay(50);
  while (MySerial.available()) {
    String out = MySerial.readStringUntil('\r');
    Serial.println(out);
  }
}